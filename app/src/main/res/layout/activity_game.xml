<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/x_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:text="X:"
            android:textSize="36sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:text="0"
            android:textSize="36sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:text="_"
            android:textSize="36sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="_"
            android:textSize="36sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/o_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/x_score">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:text="O:"
            android:textSize="36sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:text="0"
            android:textSize="36sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:text="_"
            android:textSize="36sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="_"
            android:textSize="36sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/o_score" />

    <Button
        android:id="@+id/square_0"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/square_1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/message"
        android:textSize="36sp"
        android:onClick="squareClickListener"/>

    <Button
        android:id="@+id/square_1"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/square_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/square_0"
        app:layout_constraintTop_toBottomOf="@id/message"
        android:textSize="36sp"
        android:onClick="squareClickListener"/>

    <Button
        android:id="@+id/square_2"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/square_1"
        app:layout_constraintTop_toBottomOf="@id/message"
        android:textSize="36sp"
        android:onClick="squareClickListener"/>

    <!-- second row -->

    <Button
        android:id="@+id/square_3"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:layout_constraintTop_toBottomOf="@id/square_0"
        app:layout_constraintEnd_toStartOf="@+id/square_4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="36sp"
        android:onClick="squareClickListener"/>

    <Button
        android:id="@+id/square_4"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:layout_constraintTop_toBottomOf="@id/square_1"
        app:layout_constraintEnd_toStartOf="@+id/square_5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/square_3"
        android:textSize="36sp"
        android:onClick="squareClickListener"/>

    <Button
        android:id="@+id/square_5"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:layout_constraintTop_toBottomOf="@id/square_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/square_4"
        android:textSize="36sp"
        android:onClick="squareClickListener"/>

    <!-- third row -->
    <Button
        android:id="@+id/square_6"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:layout_constraintTop_toBottomOf="@id/square_3"
        app:layout_constraintEnd_toStartOf="@+id/square_7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="36sp"
        android:onClick="squareClickListener"/>

    <Button
        android:id="@+id/square_7"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:layout_constraintTop_toBottomOf="@id/square_4"
        app:layout_constraintEnd_toStartOf="@+id/square_8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/square_6"
        android:textSize="36sp"
        android:onClick="squareClickListener"/>

    <Button
        android:id="@+id/square_8"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:layout_constraintTop_toBottomOf="@id/square_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/square_7"
        android:textSize="36sp"
        android:onClick="squareClickListener"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
