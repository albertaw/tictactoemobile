<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="48dp"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/x_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:text="X:"
                android:textColor="@android:color/black"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/x_score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/o_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:text="O:"
                android:textColor="@android:color/black"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/o_score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="36sp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/square_0"
            style="@style/BoardTheme"
            android:onClick="squareClickListener" />
        <Button
            android:id="@+id/square_1"
            style="@style/BoardTheme"
            android:onClick="squareClickListener" />
        <Button
            android:id="@+id/square_2"
            style="@style/BoardTheme"
            android:onClick="squareClickListener" />
    </LinearLayout>


    <!-- second row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/square_3"
            style="@style/BoardTheme"
            android:onClick="squareClickListener" />
        <Button
            android:id="@+id/square_4"
            style="@style/BoardTheme"
            android:onClick="squareClickListener" />
        <Button
            android:id="@+id/square_5"
            style="@style/BoardTheme"
            android:onClick="squareClickListener" />

    </LinearLayout>

    <!-- third row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/square_6"
            style="@style/BoardTheme"
            android:onClick="squareClickListener" />

        <Button
            android:id="@+id/square_7"
            style="@style/BoardTheme"
            android:onClick="squareClickListener" />

        <Button
            android:id="@+id/square_8"
            style="@style/BoardTheme"
            android:onClick="squareClickListener" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:onClick="resetClickListener"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="New Game"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"/>
</LinearLayout>
